<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>


	<definition name="Blog.admin.*"
		template="/WEB-INF/View/customer/blog/admin/inc/layout_non_aside.jsp">
		<put-attribute name="header"
			value="/WEB-INF/View/customer/blog/admin/inc/header.jsp" />
		<put-attribute name="nav"
			value="/WEB-INF/View/customer/blog/admin/inc/nav.jsp" />
		<put-attribute name="content"
			value="/WEB-INF/View/customer/blog/admin/{1}.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/View/customer/blog/inc/footer.jsp" />
	</definition>

	<definition name="Blog.nonaside.*"
		template="/WEB-INF/View/customer/blog/inc/layout_non_aside.jsp">
		<put-attribute name="header"
			value="/WEB-INF/View/customer/blog/inc/header.jsp" />
		<put-attribute name="nav"
			value="/WEB-INF/View/customer/blog/inc/nav.jsp" />
		<put-attribute name="content"
			value="/WEB-INF/View/customer/blog/main/{1}.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/View/customer/blog/inc/footer.jsp" />
	
	</definition>

	<definition name="Blog.*"
		template="/WEB-INF/View/customer/blog/inc/layout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/View/customer/blog/inc/header.jsp" />
		<put-attribute name="nav"
			value="/WEB-INF/View/customer/blog/inc/nav.jsp" />
		<put-attribute name="content"
			value="/WEB-INF/View/customer/blog/main/{1}.jsp" />
		<put-attribute name="aside"
			value="/WEB-INF/View/customer/blog/inc/aside.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/View/customer/blog/inc/footer.jsp" />
	</definition>




</tiles-definitions>